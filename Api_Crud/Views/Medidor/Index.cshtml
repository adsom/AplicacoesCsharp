@model IEnumerable<Api_Crud.Models.Medidor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MedidorTipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedidorStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SerialNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedidorConsumo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
