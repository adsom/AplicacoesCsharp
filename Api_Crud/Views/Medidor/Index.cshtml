        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MedidorTipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedidorStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SerialNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedidorConsumo)
            </td>
